  <script>
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");
    const message = document.getElementById("message");
    const hearts = document.querySelector(".hearts");
    let noCount = 0;

    yesBtn.onclick = () => {
      message.innerHTML = "Awwww! You said YES! ğŸ’– I knew you couldn't resist me!";
      hearts.style.display = "block";
      noBtn.style.display = "none";
      yesBtn.disabled = true;
    };

    noBtn.onmouseover = () => {
      noCount++;

      // Move randomly
      noBtn.style.top = `${Math.random() * 150}px`;
      noBtn.style.left = `${Math.random() * 300}px`;

      // Update text reactions
      const responses = [
        "No ğŸ˜",
        "Why not? ğŸ˜¢",
        "You sure?",
        "Please?? ğŸ¥º",
        "Don't do this to me ğŸ˜­",
        "I'm literally begging",
        "Click YES already!",
        "You're breaking my heart ğŸ’”",
        "Fine... I'm hiding now."
      ];

      if (noCount < responses.length) {
        noBtn.innerText = responses[noCount];
      } else {
        noBtn.style.display = "none";
        message.innerHTML = "Well, well... looks like YES is the only way ğŸ˜ğŸ’˜";
      }
    };

    // Randomize position on load
    window.onload = () => {
      noBtn.style.top = '60px';
      noBtn.style.left = '50px';
    };
  </script>
