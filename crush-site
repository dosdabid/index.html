  </div>
  <div id="message"></div>

  <script>
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");
    const message = document.getElementById("message");

    let noCount = 0;

    yesBtn.onclick = () => {
      message.innerHTML = "YAY!! I knew you'd say yes! ğŸ’˜ğŸ‰<br>Let's make some memories together.";
      noBtn.style.display = "none";
      yesBtn.disabled = true;
    };

    noBtn.onmouseover = () => {
      noCount++;

      if (noCount < 4) {
        noBtn.style.top = `${Math.random() * 80 + 10}%`;
        noBtn.style.left = `${Math.random() * 80 + 10}%`;
        noBtn.innerText = ["No ğŸ˜", "No ğŸ˜’", "Seriously?", "Please?? ğŸ˜¢"][noCount - 1];
      } else if (noCount < 7) {
        noBtn.innerText = ["ğŸ˜¥ You're hurting me...", "You sure about this?", "I'm gonna cry ğŸ˜­"][noCount - 4];
        noBtn.style.transform = `rotate(${Math.random() * 360}deg) scale(0.9)`;
      } else {
        noBtn.style.display = "none";
        message.innerHTML = "Okay... you left me no choice ğŸ˜Œ <br><br><strong>Now say YES!</strong>";
      }
    };

    // Reset noBtn position
    function resetNoBtnPosition() {
      noBtn.style.top = '60%';
      noBtn.style.left = '50%';
    }

    // Initialize random position for no button
    window.onload = () => {
      noBtn.style.position = 'absolute';
      resetNoBtnPosition();
    };
  </script>
